{
  "name": "system-info",
  "displayName": "System Info",
  "description": "Get up-to-date information about your computer resource usage.",
  "version": "0.1.0",
  "preview": true,
  "publisher": "MASSHUU12",
  "repository": {
    "type": "github",
    "url": "https://github.com/MASSHUU12/system-info"
  },
  "icon": "assets/icon.png",
  "homepage": "https://github.com/MASSHUU12/system-info",
  "bugs": {
    "url": "https://github.com/MASSHUU12/system-info/issues"
  },
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [
    "System",
    "Usage",
    "Monitor"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "System Info",
      "properties": {
        "system-info.refreshRate": {
          "type": "number",
          "minimum": 500,
          "maximum": 60000,
          "default": 1000,
          "markdownDescription": "Data refresh rate (in ms).\n\n*Note: The more frequent the refresh, the more performance will be affected by the extension.*"
        },
        "system-info.hideProcessorUsage": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Hide CPU utilization.\n\n*Note: The time it will take before an item disappears/appears depends on `#system-info.refreshRate#`.*\n\n*Will be improved in the future.*"
        },
        "system-info.hideMemoryUsage": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Hide RAM usage.\n\n*Note: The time it will take before an item disappears/appears depends on `#system-info.refreshRate#`.*\n\n*Will be improved in the future.*"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "systeminformation": "^5.17.9"
  }
}
